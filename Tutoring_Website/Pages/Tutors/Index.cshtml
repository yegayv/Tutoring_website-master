    <td>
        <button asp-page-handler="Delete" asp-route-id="@item.tutor_id" onclick="return confirm('Are you sure?')" class="btn btn-danger btn-sm">Delete</button>
        <a asp-page="Edit" asp-route-id="@item.tutor_id" class="btn btn-success btn-sm text-white">Edit</a>
    </td>
</tr>
}
        </table>
    </div>
</div>
